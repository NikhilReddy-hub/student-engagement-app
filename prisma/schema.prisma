generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  role      String   @default("STUDENT")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projectsOwned    Project[]      @relation("ProjectOwner")
  projectsJoined   ProjectMember[]
  tasksAssigned    Task[]
  feedbackGiven    PeerFeedback[] @relation("FeedbackFrom")
  feedbackReceived PeerFeedback[] @relation("FeedbackTo")
  logs             EngagementLog[]
}

model Project {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  mentorId String @db.ObjectId
  mentor   User   @relation("ProjectOwner", fields: [mentorId], references: [id])

  members   ProjectMember[]
  tasks     Task[]
  feedbacks PeerFeedback[]
}

model ProjectMember {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  joinedAt  DateTime @default(now())

  userId    String @db.ObjectId
  projectId String @db.ObjectId

  user    User    @relation(fields: [userId], references: [id])
  project Project @relation(fields: [projectId], references: [id])

  @@unique([userId, projectId])
}

model Task {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  status       String   @default("TODO")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  projectId    String @db.ObjectId
  assignedToId String? @db.ObjectId

  project  Project @relation(fields: [projectId], references: [id])
  assignee User?   @relation(fields: [assignedToId], references: [id])
}

model PeerFeedback {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  rating     Int
  comment    String
  createdAt  DateTime @default(now())

  projectId  String @db.ObjectId
  fromUserId String @db.ObjectId
  toUserId   String @db.ObjectId

  project  Project @relation(fields: [projectId], references: [id])
  fromUser User    @relation("FeedbackFrom", fields: [fromUserId], references: [id])
  toUser   User    @relation("FeedbackTo", fields: [toUserId], references: [id])
}

model EngagementLog {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  actionType String
  details    String?
  createdAt  DateTime @default(now())

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
}
